---
import { Image } from "astro:assets";
---

<footer class="footer">
  <h2 class="title">アカウント</h2>
  <div class="accounts white">
    <a
      class="account"
      href="https://github.com/yutteee"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image
        src="/github.png"
        alt="GitHub"
        height="60"
        width="60"
        class="icon"
      />
    </a>
    <a
      href="https://x.com/yutteeeeeeeee"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image
        src="/x.png"
        alt="X(旧Twitter)"
        height="60"
        width="60"
        class="icon"
      />
    </a>
    <a
      href="https://qiita.com/yutteee"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image src="/qiita.png" alt="Qiita" height="60" width="60" class="icon" />
    </a>
    <a
      href="https://zenn.dev/yutteee"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image src="/zenn.svg" alt="Zenn" height="60" width="60" class="icon" />
    </a>
    <a
      href="https://www.wantedly.com/id/yutteee"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image
        src="/wantedly.png"
        alt="Wantedly"
        height="60"
        width="87"
        class="icon-wantedly"
      />
    </a>
  </div>
  <div class="accounts black">
    <a
      class="account"
      href="https://github.com/yutteee"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image
        src="/github_dark.png"
        alt="GitHub"
        height="60"
        width="60"
        class="icon"
      />
    </a>
    <a
      href="https://x.com/yutteeeeeeeee"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image
        src="/x_dark.png"
        alt="X(旧Twitter)"
        height="60"
        width="60"
        class="icon"
      />
    </a>
    <a
      href="https://qiita.com/yutteee"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image src="/qiita.png" alt="Qiita" height="60" width="60" class="icon" />
    </a>
    <a
      href="https://zenn.dev/yutteee"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image src="/zenn.svg" alt="Zenn" height="60" width="60" class="icon" />
    </a>
    <a
      href="https://www.wantedly.com/id/yutteee"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image
        src="/wantedly_dark.png"
        alt="Wantedly"
        height="60"
        width="87"
        class="icon-wantedly"
      />
    </a>
  </div>
  <a href="/siteMap" class="link">サイトマップ</a>
</footer>

<style>
  .footer {
    background-color: var(--color-white);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    padding: 96px 16px;
    position: relative;
    z-index: 100;
  }

  .title {
    font-size: 2rem;
    font-weight: 900;
  }

  .accounts {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
  }

  @media screen and (max-width: 1000px) {
    .accounts {
      gap: 24px;
    }
    .icon {
      width: 44px;
      height: 44px;
    }

    .icon-wantedly {
      width: 62px;
      height: 44px;
    }
  }

  .white {
    display: flex;
  }

  .black {
    display: none;
  }

  :global(.dark) .white {
    display: none;
  }

  :global(.dark) .black {
    display: flex;
  }

  .link {
    color: var(--color-link);
    text-decoration: underline;
    position: absolute;
    bottom: 16px;
  }
</style>

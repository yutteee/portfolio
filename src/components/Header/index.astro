---
const { currentPage } = Astro.props;
import Navigation from "./children/Navigation.astro";
import ThemeIcon from "./children/ThemeIcon.astro";
---

<header class="header">
  <a href="/" class="logo" aria-label="トップ">Yutteee</a>
  <div class="nav">
    <Navigation currentPage={currentPage} />
    <ThemeIcon />
  </div>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 32px 0 32px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10000000;
    margin: 0 auto;
    backdrop-filter: blur(4px);

    @media screen and (max-width: 1000px) {
      padding: 8px 16px;
    }
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    line-height: 1;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 24px;

    @media screen and (max-width: 1000px) {
      gap: 16px;
    }
  }
</style>

---
const { image, index, title, description, url } = Astro.props;
---

<div class="product">
  <img src={image} alt="" class="image" width="400" height="250" />
  <div class="index" aria-hidden>0{index}</div>
  <div class="texts">
    <a class="link" href={url} target="_blank" rel="noopener noreferrer">
      {title}
    </a>
    <div class="description">{description}</div>
  </div>
</div>
<style>
  .title {
    font-size: 96px;
    font-weight: 700;
  }

  .product {
    position: relative;
    display: flex;
    width: fit-content;
    flex-direction: column;
    align-items: end;
    justify-content: center;
    gap: 24px;
    padding-left: 40px;

    .image {
      border-radius: 8px;
      aspect-ratio: 8/5;
      width: 100%;
      height: 100%;
    }

    .texts {
      display: flex;
      flex-direction: column;
      align-items: end;
      gap: 16px;

      .link {
        text-decoration: none;
        color: inherit;
        font-size: 1.5rem;
        font-weight: 700;

        &:hover {
          text-decoration: underline;
        }
      }
    }

    .index {
      font-size: 6rem;
      font-weight: 700;
      position: absolute;
      bottom: 40px;
      left: 0;
    }
  }
</style>

---
interface Props {
  slideHtml: string;
  slideCss: string;
}

const { slideHtml, slideCss } = Astro.props;
---

<div class="slide-container" set:html={slideHtml} />
<style set:html={slideCss}></style>

<style>
  .slide-container {
    width: 100%;
    max-width: calc(70rem + 2rem);
    margin-top: 2rem;
    margin-right: auto;
    margin-left: auto;

    .marpit {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      width: 100%;
      max-width: 100%;
      margin: 0 auto;
    }
  }
</style>

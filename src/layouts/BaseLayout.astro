---
import "destyle.css";
import Header from "../components/Header/index.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { title, description } = Astro.props;
import { SEO } from "astro-seo";
---

<html lang="ja">
  <head>
    <link rel="icon" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <SEO
      charset="UTF-8"
      title={`${title} | yutteee-portfolio`}
      description={description}
      openGraph={{
        basic: {
          title: `${title} | yutteee-portfolio`,
          type: "article",
          image: "/portfolio.png",
        },
        image: {
          alt: "中村優作のポートフォリオ",
        },
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.svg" }],
        meta: [
          {
            name: "twitter:card",
            content: "summary_large_image",
          },
          { name: "twitter:site", content: "@yutteee-portfolio" },
          { name: "twitter:creator", content: "@yutteee" },
          {
            name: "twitter:image",
            content: `${import.meta.env.SITE_URL}/portfolio.png`,
          },
          { name: "twitter:image:alt", content: "中村優作のポートフォリオ" },
          { name: "twitter:title", content: `${title} | yutteee-portfolio` },
          { name: "twitter:description", content: description },
        ],
      }}
    />
  </head>
  <body>
    <Header currentPage={title} />
    <slot />
    <Footer />
  </body>
</html>

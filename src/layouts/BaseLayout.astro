---
import "destyle.css";
import { Header } from "../features/Header";
import { Footer } from "../features/Footer";
import "../styles/global.css";
import { SEO } from "astro-seo";

interface Props {
  title: string;
  description: string;
  ogpType?: "website" | "article";
}

const { title, description, ogpType = "website" } = Astro.props;
---

<html lang="ja">
  <head>
    <script is:inline>
      // ブロッキングスクリプト: DOMが表示される前にテーマを適用
      (function() {
        const theme = localStorage.getItem("theme");
        const isOsDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        if (theme === "dark" || (theme === null && isOsDark)) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
    <link rel="icon" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <SEO
      charset="UTF-8"
      title={`${title} | yutteee-portfolio`}
      description={description}
      openGraph={{
        basic: {
          title: `${title} | yutteee-portfolio`,
          type: ogpType,
          image: `${import.meta.env.PUBLIC_SITE_URL}/portfolio.png`,
        },
        image: {
          alt: "中村優作のポートフォリオ",
        },
      }}
      extend={{
        meta: [
          {
            name: "twitter:card",
            content: "summary_large_image",
          },
          { name: "twitter:site", content: "@yutteee-portfolio" },
          { name: "twitter:creator", content: "@yutteee" },
        ],
      }}
    />
  </head>
  <body>
    <Header currentPage={title} client:load />
    <slot />
    <Footer client:only />
  </body>
</html>

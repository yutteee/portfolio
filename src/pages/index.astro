---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Home Page";
import TopAnimation from "../components/TopAnimation.astro";
import LinkButton from "../components/LinkButton.astro";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="container">
    <TopAnimation />
    <div class="about">
      <div class="pc">
        <div class="monitor"></div>
        <div class="keyboard"></div>
      </div>
      <div class="texts">
        <h1 class="title">Nakamura Yusaku</h1>
        <p>
          名古屋大学工学部化学生命工学科の4年生です。<br />
          名古屋のアプリ開発団体jackで活動しており、web開発を楽しんでいます。特にフロントエンドとデザインが好きです。
        </p>
        <LinkButton text="詳細なプロフィール" url="/about/" />
      </div>
    </div>
  </div>
</BaseLayout>

<script></script>

<style>
  .container {
    width: 100%;
    height: 100%;
    background-color: var(--color-blue);

    .about {
      margin-top: 50svh;
      display: flex;
      gap: 64px;
      position: relative;
      z-index: 1000;
      justify-content: center;

      .pc {
        display: flex;
        align-items: center;
        flex-direction: column;
        gap: 48px;
        .monitor {
          width: 300px;
          height: 187.5px;
          height: 20svh;
          background-color: var(--color-white);
          border-radius: 16px;
          border: 8px solid var(--color-white);
          position: relative;
          box-shadow:
            rgba(0, 0, 0, 0.05) 0px 6px 24px 0px,
            rgba(0, 0, 0, 0.08) 0px 0px 0px 1px;
        }

        .keyboard {
          width: 150px;
          border-bottom: 30px solid var(--color-white);
          border-left: 8px solid transparent;
          border-right: 8px solid transparent;
          box-shadow:
            rgba(0, 0, 0, 0.05) 0px 6px 24px 0px,
            rgba(0, 0, 0, 0.08) 0px 0px 0px 1px;
        }
      }

      .texts {
        display: flex;
        flex-direction: column;
        gap: 48px;
        .title {
          font-size: 4rem;
          font-weight: 900;
        }
      }
    }
  }
</style>

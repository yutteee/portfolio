<style>
  .container {
    display: flex;
    justify-content: end;
    gap: 64px;
    width: 100%;
    height: 100%;
  }

  .pc-wrapper {
    position: fixed;
    width: calc((100%  / 12) * 4);
    top: 0;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: end;
    align-items: center;
    padding-right: calc((100% / 12) / 2);
  }

  .pc {
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 48px;
  }

  .monitor {
    width: 300px;
    height: 187.5px;
    background-color: var(--color-white);
    border-radius: 16px;
  }

  .keyboard {
    width: 150px;
    border-bottom: 30px solid var(--color-white);
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
  }

  .main-wrapper {
    width: calc((100% / 12) * 8);
    display: flex;
    justify-content: start;
    align-items: center;
  }

  .main {
    display: flex;
    flex-direction: column;
    max-width: 800px;
    height: fit-content;
    margin-left: calc((100% / 12) / 2);
  }

  .page {
    height: 100svh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .title {
    font-size: 96px;
    font-weight: 900;
    margin-bottom: 48px;
  }

  .description {
    font-size: 18px;
    line-height: 2;
    font-weight: 900;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .history-item {
    height: 70svh;
    border-top: 1px solid var(--color-black);
    padding: 48px 0;
    position: relative;
  }

  .history-item-description {
    position: sticky;
    top: 48px;
    font-size: 18px;
    line-height: 2;
    font-weight: 900;
    display: flex;
    flex-direction: column;
    gap: 24px;
    height: fit-content;
  }
</style>
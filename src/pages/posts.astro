---
import BaseLayout from "../layouts/BaseLayout.astro";
const allPosts = await Astro.glob("../content/posts/*.md");
const pageTitle = "記事";
import BlogPost from "../components/BlogPost.astro";
import PageTitle from "../components/PageTitle.astro";

const getFileName = (file: string) => {
  const fileNameWithExtentision = file.split("/").pop();
  const fileName = fileNameWithExtentision?.replace(".md", "");

  return fileName;
};
---

<BaseLayout pageTitle={pageTitle}>
  <main class="container">
    <PageTitle title="記事" />
    <ul class="articles">
      {
        allPosts.map((post) => (
          <BlogPost
            url={`/posts/${getFileName(post.file)}`}
            title={post.frontmatter.title}
            image={
              post.frontmatter.image
                ? post.frontmatter.image.url
                : `${import.meta.env.SITE_URL}/ogp/${getFileName(post.file)}.png`
            }
            date={post.frontmatter.pubDate}
          />
        ))
      }
    </ul>
  </main>
</BaseLayout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    padding: 0 1rem;
    align-items: center;
    .articles {
      padding-top: 4rem;
      padding-bottom: 6rem;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 4rem 3rem;
      list-style: none;
      max-width: 1120px;

      @media screen and (max-width: 768px) {
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }
    }
  }
</style>

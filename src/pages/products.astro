---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Products Page";
import { products } from "../data/products";
import ProductItem from "../components/ProductItem.astro";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="container">
    <div class="title-container">
      <div class="line"></div>
      <h1 class="title">Products</h1>
    </div>
    <div class="products">
      {
        products.map((product, index) => (
          <ProductItem
            index={index + 1}
            image={product.image}
            title={product.title}
            description={product.description}
            url={product.url}
          />
        ))
      }
    </div>
  </div>

  <style>
    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 0 1rem;

      .title-container {
        margin-top: 32px;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 32px;
        width: 100%;

        .line {
          width: 100%;
          height: 1px;
          background-color: #000;
        }

        .title {
          font-size: 96px;
          font-weight: 700;
          margin-right: 128px;
        }
      }

      .products {
        /* grid 2つ並べて折り返す*/
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        max-width: 1180px;
        flex-wrap: wrap;

        > *:nth-child(odd) {
          margin: 2rem 1.5rem 6rem 0;
        }

        > *:nth-child(even) {
          margin: 8rem 0 0 1.5rem;
        }
      }
    }
  </style></BaseLayout
>
